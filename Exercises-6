/*
#include <stdio.h>

int main(void)
{
	
	int x,y;
	char oper;

	printf("Input first operand: ");
	scanf("%d",&x);
	printf("Input second operand: ");
	scanf("%d",&y);

	printf("Input the operation you'd like to perform: ");
	scanf(" %c",&oper);

	switch (oper)
	{
	    case '+':
		printf("%d + %d is equal to %d\n",x,y,x+y);
		break;

		case '-':
		printf("%d - %d is equal to %d\n",x,y,x-y);
		break;

		case '*':
		printf("%d * %d is equal to %d\n",x,y,x*y);
		break;

		case '/':
		printf("%d / %d is equal to %.2lf\n",x,y,(double)x/y);
		break;

			default:
				printf("Wrong input\n Try + for summation, - for substraction, * for multiplication, / for division\n");
	}
	
	return 0;
}
